<Window x:Class="Uppgift4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="400" Width="400">
    <Viewbox Stretch="Uniform">
        <Canvas Name="MainCanvas" Height="100" Width="100" Background="White">
            <Ellipse Name="balloon" Cursor="Hand" Canvas.Left="40" MouseDown="Shape_MouseDown" MouseMove="Shape_MouseMove" MouseUp="Shape_MouseUp" Canvas.Top="0" Height="20" Width="20" Fill="Aqua"></Ellipse>
            <Ellipse Name="stone" Cursor="Hand" Canvas.Left="20" MouseDown="Shape_MouseDown" MouseMove="Shape_MouseMove" MouseUp="Shape_MouseUp" Canvas.Top="90" Height="10" Width="10" Fill="Black"></Ellipse>
            <Rectangle Name="RectangleYellow" Cursor="Hand" Canvas.Left="60" MouseDown="Shape_MouseDown" MouseMove="Shape_MouseMove" MouseUp="Shape_MouseUp" Canvas.Top="40" Height="15" Width="15" Fill="Orange"></Rectangle>
        </Canvas>
    </Viewbox>
</Window>
